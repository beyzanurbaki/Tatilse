@model Tatilse.Models.Request.RoomEditDTO
<h2>Oda Güncelle</h2>
<hr />

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="room_id" />

    <div class="mb-3">
        <label asp-for="room_name" class="form-label">Oda adı</label>
        <input asp-for="room_name" class="form-control" />
        <span asp-validation-for="room_name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="room_price" class="form-label">Fiyatı</label>
        <input asp-for="room_price" class="form-control" />
        <span asp-validation-for="room_price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="room_quantity" class="form-label">Oda miktarı</label>
        <input asp-for="room_quantity" class="form-control" />
        <span asp-validation-for="room_quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="room_max_people" class="form-label">Maksimum kişi sayısı</label>
        <input asp-for="room_max_people" class="form-control" />
        <span asp-validation-for="room_max_people" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="room_capacity" class="form-label">Oda büyüklüğü</label>
        <input asp-for="room_capacity" class="form-control" />
        <span asp-validation-for="room_capacity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="room_image" class="form-label">Oda büyüklüğü</label>
        <input asp-for="room_image" class="form-control" />
        <span asp-validation-for="room_image" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="hotel_id" class="form-label">Otel</label>
        <select asp-for="hotel_id" asp-items="ViewBag.Hotels" class="form-control"></select>
        <span asp-validation-for="hotel_id" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-secondary">Kaydet</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
