@model Tatilse.Data.Hotel

@{
    ViewData["Title"] = "Hotel Create";
    var allFeatures = ViewBag.Features as MultiSelectList;
}

<h2>Otel Ekle</h2>

<form asp-action="HotelCreate" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="hotel_name" class="form-label"></label>
        <input asp-for="hotel_name" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="hotel_description" class="form-label"></label>
        <textarea asp-for="hotel_description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="hotel_price" class="form-label"></label>
        <input asp-for="hotel_price" type="number" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="hotel_city" class="form-label"></label>
        <input asp-for="hotel_city" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="hotel_township" class="form-label"></label>
        <input asp-for="hotel_township" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Görsel Yükle</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Otel Özellikleri</label>
        <div class="row">
            @foreach (var feature in allFeatures)
            {
                <div class="col-md-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="SelectedFeatureIds" value="@feature.Value" id="feature_@feature.Value" />
                        <label class="form-check-label" for="feature_@feature.Value">@feature.Text</label>
                    </div>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>
