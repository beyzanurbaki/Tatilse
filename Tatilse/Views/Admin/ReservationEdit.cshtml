@model Reservation

<h2>Rezervasyon Güncelle</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="ReservationEdit" method="post">
    <input type="hidden" asp-for="reservation_id" />

    <label asp-for="start_date"></label>
    <input asp-for="start_date" class="form-control" />
    <span asp-validation-for="start_date" class="text-danger"></span>

    <label asp-for="end_date"></label>
    <input asp-for="end_date" class="form-control" />
    <span asp-validation-for="end_date" class="text-danger"></span>

    <label>Müşteri</label>
    <select asp-for="client_id" asp-items="ViewBag.Clients" class="form-control"></select>

    <label>Oda</label>
    <select asp-for="room_id" asp-items="ViewBag.Rooms" class="form-control"></select>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>
