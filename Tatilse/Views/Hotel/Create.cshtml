@model Tatilse.Data.Hotel

@{
    ViewData["Title"] = "Hotel Ekle";
}

<h2>Hotel Ekle</h2>
<hr>

<form asp-controller="Hotel" asp-action="Create" method="post">

    <div class="mb-3">
        <label asp-for="hotel_name" class="form-label">Hotel Adı</label>
        <input asp-for="hotel_name" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="hotel_price" class="form-label">Hotel Fiyatı</label>
        <input asp-for="hotel_price" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="hotel_description" class="form-label">Hotel Açıklaması</label>
        <input asp-for="hotel_description" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="hotel_image" class="form-label">Hotel Fotoğrafı</label>
        <input asp-for="hotel_image" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Özellikler</label>
        <select asp-for="SelectedFeatureIds" asp-items="ViewBag.Features" class="form-control" multiple></select>
    </div>

    <button type="submit" class="btn btn-secondary">Kaydet</button>
</form>
