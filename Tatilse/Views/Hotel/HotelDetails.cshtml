@model Hotel


<div class="container mt-4">
    <form onsubmit="search(event)" class="row g-2 align-items-center">
        <div class="col-md-3">
            <input type="text" name="hotelName" class="form-control" placeholder="Otel adı" />
        </div>
        <div class="col-md-2">
            <input type="date" name="startDate" class="form-control" />
        </div>
        <div class="col-md-2">
            <input type="date" name="endDate" class="form-control" />
        </div>
        <div class="col-md-2">
            <input type="number" name="guestCount" class="form-control" min="1" placeholder="Kişi sayısı" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-outline-primary w-100">Ara</button>
        </div>
    </form>
</div>

<body>
    <div class="container mt-5">
        <!-- Otel Fotoğrafı -->
        <div class="text-center mb-4">
            <img src="@Url.Content("~/img/hotel/" + Model.hotel_image)" class="img-fluid rounded shadow" style="max-height: 400px; object-fit: cover;" alt="Otel Fotoğrafı" />
        </div>

        <!-- Otel Bilgileri -->
        <div class="card mb-4">
            <div class="card-body">
                <h2 class="card-title">@Model.hotel_name</h2>
                <p><strong>Adres:</strong> @Model.hotel_city, @Model.hotel_township</p>
                <p><strong>Açıklama:</strong> @Model.hotel_description</p>
            </div>
        </div>

        <!-- Otel Özellikleri -->
        <div class="card mb-4">
            <div class="card-body">
                <h3>Otel Özellikleri</h3>
                <ul class="list-group list-group-flush">
                    @foreach (var feature in Model.features)
                    {
                        <li class="list-group-item">@feature.feature_name</li>
                    }
                </ul>
            </div>
        </div>

        <!-- Odalar -->
        <div class="">
            <div class="">
                <h3 class="mb-4">Odalar</h3>

                <div class="row">
                    @foreach (var room in Model.rooms)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <div id="carouselRoom@room.room_id" class="carousel slide" data-bs-ride="carousel">
                                    <div class="carousel-inner">
                                        <div class="carousel-item active">
                                            <img src="~/img/room/@room.room_image" class="d-block w-100" style="height: 200px; object-fit: cover;" alt="Oda Görseli">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">Oda No: @room.room_id</h5>
                                    <p>deneme</p>
                                    <p class="card-text">Fiyat: @room.room_price TL</p>
                                    <p class="card-text">Kapasite: @room.room_max_people kişi</p>

                                    <form asp-controller="Reservation" asp-action="ReservationCreate" method="get">
                                        <input type="hidden" name="roomId" value="@room.room_id" />
                                        <button type="submit" class="btn btn-primary mt-2">Rezervasyon Yap</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>

</body>

<script>
 function search(event) {
  event.preventDefault();
  const formData = new FormData(event.currentTarget);

  fetch("/Hotel/Search", {
   method: "POST",
   body: formData
  })
  .then(res => {
   if (!res.ok) {
    return res.text().then(err => { throw new Error(err); });
   }
   return res.text();
  })
  .then(html => {
   document.getElementById("search-results").innerHTML = html;
  })
  .catch(error => {
   alert(error.message);
  });
 }
