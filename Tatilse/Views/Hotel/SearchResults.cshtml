@model IEnumerable<Tatilse.Data.Hotel>

<h2>Arama Sonuçları</h2>

@if (!Model.Any())
{
    <p>Uygun otel bulunamadı.</p>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card text-center mb-3 card-design" style="width: 100%; height: 450px;">
                    <img src="~/img/@(item.hotel_image ?? "default.jpg")" class="card-img-top" alt="otel görseli" style="height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5>@item.hotel_name</h5>
                        <p>@item.hotel_city - @item.hotel_township</p>
                        <p>@item.hotel_price TL</p>
                        <a href="@Url.Action("HotelDetails", "Hotel", new { id = item.hotel_id })" class="btn btn-primary">Detay</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
