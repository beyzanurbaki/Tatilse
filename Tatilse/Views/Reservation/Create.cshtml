@model Tatilse.Models.Request.ReservationCreateDTO

@{
    ViewData["Title"] = "Rezervasyon Oluştur";
}

<h2>Rezervasyon Oluştur</h2>

@if (!string.IsNullOrEmpty(ViewBag.Alert as string))
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.Alert
    </div>
}

<form asp-action="ReservationCreate" method="post">
    <div class="form-group">
        <label asp-for="start_date"></label>
        <input asp-for="start_date" type="date" class="form-control" />
        <span asp-validation-for="start_date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="end_date"></label>
        <input asp-for="end_date" type="date" class="form-control" />
        <span asp-validation-for="end_date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="room_id"></label>
        <select asp-for="room_id" class="form-control" asp-items="ViewBag.Rooms">
            <option value="">Lütfen bir oda seçiniz</option>
        </select>
        <span asp-validation-for="room_id" class="text-danger"></span>
    </div>

    @* Seçilen oda bilgileri gösterimi *@
    @if (ViewBag.SelectedRoom != null)
    {
        <div class="form-group mt-3">
            <strong>Oda:</strong> @ViewBag.SelectedRoom.room_name <br />
            <strong>Otel:</strong> @ViewBag.SelectedRoom.hotel.hotel_name
        </div>
    }

    @* Adminler için müşteri seçimi (isteğe bağlı) *@
    @*
    @if (ViewBag.Clients != null)
    {
        <div class="form-group">
            <label>Müşteri</label>
            <select name="client_id" class="form-control" asp-items="ViewBag.Clients">
                <option value="">Müşteri Seçiniz</option>
            </select>
        </div>
    }
    *@

    <button type="submit" class="btn btn-primary mt-3">Rezervasyonu Kaydet</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
