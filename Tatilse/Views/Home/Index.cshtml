@model IEnumerable<Hotel>

@{
	ViewData["Title"] = "Tatil bizden sorulur!"; @*Sekme başlığı*@
}

@if (Model != null)
{
	<div class="row">

		@foreach (var item in Model)
		{
			<div class="col-md-3">
				<div class="card text-center mb-3 card-design" style="width: 100%; height: 450px;">
					<img src="~/img/@(item.hotel_image ?? "default.jpg")" class="card-img-top" alt="Otel Resmi" style="height: 200px; object-fit: cover;">
					<div class="card-body d-flex flex-column justify-content-between" style="height: 250px;">
						<h5 class="card-text">@Html.DisplayFor(modelItem => item.hotel_name)</h5>
						<p class="card-text">@Html.DisplayFor(modelItem => item.hotel_city)</p>
						<p class="card-text">@Html.DisplayFor(modelItem => item.hotel_township)</p>
						<a href="~/Hotel/HotelDetails" class="d-inline-flex focus-ring py-1 px-2 text-decoration-none border rounded-2 btn btn-primary">@Html.DisplayFor(modelItem => item.hotel_price) TL</a>
					</div>
				</div>
			</div>
			 
		}
	</div>

}
else
{
	<p>Hotel listesi yüklenemedi.</p>
}
