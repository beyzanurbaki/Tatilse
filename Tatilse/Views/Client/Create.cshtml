@Html.AntiForgeryToken()
<partial name="_ValidationScriptsPartial" />

@model Client

<h2>Müşteri Ekle</h2> @* hotel başlığı *@
<hr> @*çizgi*@
<form asp-controller="Client" asp-action="Create" method="post">
		<div class="mb-3">
		<label asp-for="client_name" class="form-label">Ad</label>
		<input asp-for="client_name" class="form-control" required />
		<div class="invalid-feedback">
			Lütfen adınızı giriniz.
		</div>
	</div>
	<div class="mb-3">
		<label asp-for="client_surname" class="form-label">Soyad</label>
		<input asp-for="client_surname" class="form-control" required/>

		<div class="mb-3">
			<label asp-for="client_username" class="form-label">Kullanıcı adı</label>
			<input asp-for="client_username" class="form-control" />
			<span asp-validation-for="client_username" class="text-danger"></span>
		</div>

	<div class="mb-3">
		<label asp-for="client_passw" class="form-label">Şifre</label>
		<input asp-for="client_passw" class="form-control" />
	</div>
	<div class="mb-3">
	<label asp-for="client_birthdate" class="form-label">Doğum Tarihi</label>
	<input asp-for="client_birthdate" class="form-control" />
	</div>

	<div class="mb-3">
	<label asp-for="client_identity" class="form-label">Kimlik Numarası</label>
	<input asp-for="client_identity" class="form-control" />
	</div>
	<div class="mb-3">
	<label asp-for="client_phone" class="form-label">Telefon Numarası</label>
	<input asp-for="client_phone" class="form-control" />
	</div>

	<div class="mb-3">
	<label asp-for="client_email" class="form-label">E posta</label>
	<input asp-for="client_email" class="form-control" />
	</div>

	<button type="submit" class="btn btn-secondary">Kaydet</button>


</form>