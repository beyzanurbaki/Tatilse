@model Client

<h2>Müşteri Güncelle</h2> @* hotel başlığı *@
<hr> @*çizgi*@
<form asp-controller="Client" asp-action="Edit" method="post">

	<input type="hidden" asp-for="client_id">
	<div class="mb-3">
		<label asp-for="client_name" class="form-label">Adı</label>
		<input asp-for="client_name" class="form-control" />
	</div>
	<div class="mb-3">
		<label asp-for="client_surname" class="form-label">Soyad</label>
		<input asp-for="client_surname" class="form-control" />
	</div>
	<div class="mb-3">
		<label asp-for="client_username" class="form-label">Kullanıcı adı</label>
		<input asp-for="client_username" class="form-control" />
	</div>
	<div class="mb-3">
		<label asp-for="client_passw" class="form-label">Şifre</label>
		<input asp-for="client_passw" class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="client_gender" class="form-label">Cinsiyet</label>
		<select asp-for="client_gender" class="form-control">
			<option value="true">
				Kadın
			</option>
			<option value="false">
				Erkek
			</option>
		</select>

	</div>

	<div class="mb-3">
		<label asp-for="client_birthdate" class="form-label">Doğum Tarihi</label>
		<input asp-for="client_birthdate" class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="client_identity" class="form-label">Kimlik</label>
		<input asp-for="client_identity" class="form-control" />
	</div>
	<div class="mb-3">
		<label asp-for="client_phone" class="form-label">Telefon Numarası</label>
		<input asp-for="client_phone" class="form-control" />
	</div>
	<div class="mb-3">
		<label asp-for="client_email" class="form-label">Email</label>
		<input asp-for="client_email" class="form-control" />
	</div>

	<button type="submit" class="btn btn-secondary">Kaydet</button>




</form>